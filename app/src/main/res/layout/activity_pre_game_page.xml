<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout_pregame"
    tools:context=".PreGamePage">

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/constraint_layout_pregame"
        app:layout_constraintRight_toRightOf="@id/constraint_layout_pregame"
        app:layout_constraintLeft_toLeftOf="@id/constraint_layout_pregame"
        android:layout_marginTop="100dp"
        android:text="НАЧАТЬ ИГРУ / PLAY THE GAME" />

    <Button
        android:id="@+id/buttonResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/constraint_layout_pregame"
        app:layout_constraintRight_toRightOf="@id/constraint_layout_pregame"
        app:layout_constraintLeft_toLeftOf="@id/constraint_layout_pregame"
        android:layout_marginTop="200dp"
        android:text="ПОСМОТРЕТЬ РЕЗУЛЬТАТЫ /\n SEE THE RESULTS" />
</androidx.constraintlayout.widget.ConstraintLayout>