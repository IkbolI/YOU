<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout_auth"
    tools:context=".AuthActivity">


    <TextView
        android:id="@+id/textInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Для использования данного приложения\n необходимо зарегистрироваться.\n\n In order to use this app\n please SIGN UP.\n"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/constraint_layout_auth"
        app:layout_constraintRight_toRightOf="@id/constraint_layout_auth"
        app:layout_constraintLeft_toLeftOf="@id/constraint_layout_auth"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textInfo"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="ИМЯ ПОЛЬЗОВАТЕЛЯ / USERNAME"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Э-ПОЧТА / E-MAIL"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>


            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="ПАРОЛЬ / PASSWORD"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/button_regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РЕГИСТРАЦИЯ / SING UP" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>